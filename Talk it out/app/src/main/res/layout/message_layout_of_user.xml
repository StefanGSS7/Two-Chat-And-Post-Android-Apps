<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/receverMesageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/recever_message_text_background"
        android:maxWidth="300dp"
        android:padding="10dp"
        android:text="Recever Message"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/receverProfilePicture"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/senderMesageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/sender_message_text_background"
        android:maxWidth="300dp"
        android:padding="10dp"
        android:text="Sender Message"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/senderProfilePicture"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/receverProfilePicture"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/avatar1" />

    <ImageView
        android:id="@+id/senderProfilePicture"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/avatar1" />

    <ImageView
        android:id="@+id/receverMesageImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:adjustViewBounds="true"
        android:background="@color/colorAccent"
        android:src="@drawable/avatar1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/senderMesageImage"
        app:layout_constraintStart_toEndOf="@+id/receverProfilePicture"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/senderMesageImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="3dp"
        android:adjustViewBounds="true"
        android:background="@color/colorAccent"
        android:src="@drawable/avatar1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/senderProfilePicture"
        app:layout_constraintStart_toEndOf="@+id/receverMesageImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/receverMessageVideo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:adjustViewBounds="true"
        android:background="@color/colorAccent"
        android:src="@drawable/avatar1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/senderMessageVideo"
        app:layout_constraintStart_toEndOf="@+id/receverProfilePicture"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/senderMessageVideo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="3dp"
        android:adjustViewBounds="true"
        android:background="@color/colorAccent"
        android:src="@drawable/avatar1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/senderProfilePicture"
        app:layout_constraintStart_toEndOf="@+id/receverMessageVideo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.506" />

    <ImageView
        android:id="@+id/receverVideoPlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/receverMessageVideo"
        app:layout_constraintEnd_toEndOf="@+id/receverMessageVideo"
        app:layout_constraintStart_toEndOf="@+id/receverMesageImage"
        app:layout_constraintTop_toTopOf="@+id/receverMessageVideo"
        app:srcCompat="@drawable/playbutton" />

    <ImageView
        android:id="@+id/senderVideoPlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/senderMessageVideo"
        app:layout_constraintEnd_toEndOf="@+id/senderMessageVideo"
        app:layout_constraintStart_toStartOf="@+id/senderMessageVideo"
        app:layout_constraintTop_toTopOf="@+id/senderMessageVideo"
        app:srcCompat="@drawable/playbutton" />

</androidx.constraintlayout.widget.ConstraintLayout>